{
  "name": "marketing-campaigns-backend",
  "version": "1.0.0",
  "description": "Backend API for Marketing Campaigns Portal",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"nodemon dist/server.js\"",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testTimeout": 30000,
    "maxWorkers": 1
  },
  "dependencies": {
    "@okta/okta-sdk-nodejs": "^7.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/kafka-node": "^3.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.19.75",
    "@types/supertest": "^6.0.2",
    "@types/winston": "^2.4.4",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.1.9",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}